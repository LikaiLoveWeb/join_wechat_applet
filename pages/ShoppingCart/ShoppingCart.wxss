/* ShoppingCart.wxss */
view{
  font-family: STXihei, "华文细黑", "Microsoft YaHei", "微软雅黑";
}
.ShoppingCart{
  background-color: #fff;
  margin-bottom: 20rpx;
}
.ShoppingCartBox{
 background-color: #f5f5f5;
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  overflow: hidden;
}
.ShoppingCartBox_f{
  padding-bottom:110rpx;
}
.ShoppingCartBox:after{
  content: '';
  display: block;
  clear: both;
}
.checkbox{
  border-radius: 50%;
  width: 38rpx;
  height: 38rpx;
  overflow: hidden;
}
.checkbox image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.checkboxChecked{
  border-radius: 50%;
  width: 38rpx;
  height: 38rpx;
  background-size: cover;
}
.shop image{
    width: 100%;
  height: 100%;
  vertical-align: top;
}
.shop{
  width: 38rpx;
  height: 38rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.ShoppingName{
  font-size: 30rpx;
  width:500rpx; 
  white-space:nowrap;
  text-overflow:ellipsis; 
  overflow:hidden;
}
.shopBox{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
  box-sizing: border-box;
}
.shopBox>view{
  display: inline-block;
  vertical-align: middle
}
.shoppingList{
  margin: 20rpx 30rpx;
}
.shoppingBox{
  width: 100%;
  height: 180rpx;
  line-height: 180rpx;
  padding-bottom: 20rpx;
  position: relative;
  transition: all 0.3s;
  -webkit-animation: all 0.3s;
  -moz-animation:  all 0.3s;
  -o-animation:  all 0.3s;
}
.shoppingBox > view{
  display: inline-block;
  vertical-align: middle
}
.shoppingImg{
  width: 180rpx;
  height: 100%;
  overflow: hidden;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-size: cover;
}
.shoppingImg image{
  width: 180rpx;
  height: 180rpx;
}
.shoppingData{
  width: 430rpx;
  height: 100%;
}
.shopping_title{
 width: 430rpx;
  height: 72rpx;
  overflow: hidden
}
.shopping_titles{
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
  width: 430rpx;
  height: 72rpx;
 text-overflow: ellipsis; 
    display: -webkit-box;  
    -webkit-line-clamp: 2;  
    -webkit-box-orient: vertical; 
}
.shopping_type{
  font-size: 24rpx;
  color: #999;
  width: 100%;
  height: 48rpx;
  line-height: 48rpx;
  margin:5rpx 0;
}
.shopping_type view{
  vertical-align: top;
  display: inline-block;
}
.shopping_tab{
  width: 100%;
  height: 52rpx;
}
.tab_left{
  height: 100%;
  float: left;
}
.tab_left > view{
  display: inline-block;
  line-height: 48rpx;
  vertical-align: top;
}
.tab_left .reduce,.tab_left .plus{
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid #dadada;
  text-align: center;
  color: #999
}
.tab_left .reduce{
  border-radius: 4rpx 0 0 4rpx;
}
.tab_left .plus{
  border-radius: 0 4rpx 4rpx 0;
}
.tab_left .shopping_num{
  width: 78rpx;
  height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  border-top: 1rpx solid #dadada;
  border-bottom: 1rpx solid #dadada;
  display:inline-block;
  vertical-align:top;
  box-sizing: border-box;
}
.tab_right{
  float: right;
  height: 100%;
  text-align: right;
  max-width: 200rpx;
  font-size: 24rpx;
  color: #6e08a8;
  line-height: 52rpx;
}
.tab_right view{
  display: inline-block
}
.BeOverdue{
  background-color: #fff;
  padding-top: 20rpx;
  padding-left:15rpx;
  padding-right: 15rpx;
  margin-bottom: 20rpx;
}
.Invalid{
  width: 60rpx;
  height: 30rpx;
  background-color: #c7c7c7;
  font-size: 20rpx;
  color: #fff;
  border-radius: 14rpx;
  line-height: 30rpx;
  text-align: center;
}
.shopping_tab .no_shopping{
  font-size: 22rpx;
  color: #333;
  line-height: 52rpx;
  width: 100%;
  height: 52rpx;
}
.BeOverdue .no_shopping_titles{
  font-size: 24rpx;
  color: #999;
}
.BeOverdue .no_shoppingImg{
  position: relative;
}
.BeOverdue .no_shoppingImg::after{
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  opacity: .5;
}
.beOverdue_bottom{
  width: 220rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  border:1rpx solid #6e08a8;
  display: inline-block;
  color: #6e08a8;
}
.beOverdue_bottom_box{
  width: 100%;
  height: 60rpx;
  text-align: center;
  padding: 20rpx 0;
}
.Settlement_box{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding-left: 25rpx;
  box-sizing: border-box;
  height: 110rpx;
  background: #fff;
  line-height: 110rpx;
  border-top: 1rpx solid #e6e6e6;
  border-bottom: 1rpx solid #e6e6e6;
  z-index: 999
}
.checkboxText{
text-align:left;
font-size:22rpx;
color:#333;
vertical-align:top;
line-height:30rpx;
margin-left: -3rpx;
}
.checkboxBox_all{
  height: 100%;
  display: inline-block;
  text-align: center;
  width: 235rpx;
  float: left;
}
.checkboxBox_all .checkbox,.checkboxBox_all .checkboxChecked{
  margin: 20rpx 0 10rpx 0rpx;
}
.pice_shp{
  width: 250rpx;
  height: 100%;
  display: inline-block;
    line-height: 110rpx;
     float: left;
}
.pice_shp  > view{
  display: inline-block;
  vertical-align: top;
   float: right;
}
.total{
  font-size:28rpx;
  color: #333;
  height: 28rpx;
 line-height: 28rpx;
 margin: 24rpx 0 14rpx 0;
}
.total>view{
  display: inline-block;
}
.total_bottom{
  font-size: 22rpx;
  color: #999;
  height: 22rpx;
  line-height: 22rpx;
  width:100%;
text-align:right;

}
.total_num{
  color: #6e08a8;
}
.Settlement{
  float: right;
  width: 220rpx;
  height: 100%;
  line-height: 110rpx;
  text-align: center;
  background: #6e08a8;
  color: #fff;
  font-size: 30rpx;
}
.delete_btn{
  position: absolute;
  width: 120rpx;
  height: 180rpx;
  background: #6e08a8;
  font-size: 28rpx;
  color: #fff;
  line-height: 180rpx;
  text-align: center;
  top: 0;
  right: -150rpx;
}
.no_shopping .img_{
  width: 155rpx;
  height: auto;
  margin: 350rpx auto 28rpx;
}
.no_shopping .img_ image{
  width: 100%;
}
.no_title{
  width: 100%;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  margin-bottom: 90rpx;
}
.btn_no{
  width: 260rpx;
  height: 70rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  border: 2rpx solid #6e08a8;
  color: #6e08a8;
  font-size: 30rpx;
  line-height: 66rpx;
  text-align: center;
  box-sizing: border-box;
}
