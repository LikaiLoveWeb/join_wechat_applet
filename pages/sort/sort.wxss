.Sortcontainer{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  border-top:1px solid #e6e6e6;
}
/* 左边内容 */
.nav_left{
  display: inline-block;
  width: 25%;
  height: 1100rpx;
  text-align: center;
  background:#f5f5f5;
}
/*左边导航条  */
.flex-wrp{
  /* display: flex; */
}
.flex-tab{
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item{
  /* flex-grow: 0.5; */
  text-align: center;
  font-size:28rpx;
  color:#666666;
}
.top-tab{
   width: 25%;
   height:100rpx; 
  color: #333333;
  font-size: 28rpx;
  line-height:100rpx;
   margin: 0 0 8rpx 0; 
  position: fixed;
  top: 0;
  z-index: 9999;
}
.toptab.active{
  color: #6e08a8;
  border-left: solid 3px #6e08a8;
  font-size:30rpx;
  font-weight:bold;
  background:#fff;
  margin-top:1rpx;
}
/* 右边内容 */
.nav_right{
 position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding-left:10px;
  padding-right:10px;
  background: #fff;
  box-sizing: border-box;
}
/* banner图片 */
.SortImg{
   width:100%;
   height:200rpx;
   margin-top:30rpx;
}
.SortImg .sild_Img{
  width:100%;
  height:200rpx;
 
}
