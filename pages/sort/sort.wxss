.Itemlist{
   float:left;
   width:130rpx;
   height:174rpx;
   margin-left:35rpx;
   margin-top:40rpx;
  }
.sortItem{
  width:130rpx;
  height:130rpx;
}
.text{
  font-size:24rpx;
  color:#666666;
  text-align:center;
  margin-top:20rpx;
}